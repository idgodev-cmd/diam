---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

// === SERVER SIDE ===
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const initialPosts = sortedPosts.slice(0, 4);

const DEFAULT_IMG = "/images/og-default.webp"; 

// Helper: Ambil URL gambar mentah
const getPostImage = (post) => {
    const img = post.data.image || post.data.cover || post.data.heroImage;
    if (typeof img === 'string') return img;
    if (img && typeof img === 'object' && img.src) return img.src; 
    return DEFAULT_IMG;
};

// === OPTIMIZER HELPER (SERVER) ===
const optimizeImage = (url, width = 600) => {
    if (!url || url.startsWith('http') || url === DEFAULT_IMG) return url;
    const isProd = import.meta.env.PROD; 
    const siteUrl = 'https://diam.blog'; 

    if (isProd) {
        const fullUrl = `${siteUrl}${url}`;
        return `https://wsrv.nl/?url=${encodeURIComponent(fullUrl)}&w=${width}&output=webp&q=80`;
    }
    return url; 
};

// === SEO: SCHEMA MARKUP (JSON-LD) ===
// Ini ngebantu Google paham struktur website lu
const schemaData = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Diam.blog",
  "url": "https://diam.blog",
  "description": "Catatan kaki seorang pemalas yang mencoba memahami hidup.",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://diam.blog/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  },
  "author": {
    "@type": "Person",
    "name": "Admin Diam.blog",
    "image": "https://diam.blog/images/avatardiam.webp"
  }
};
---

<BaseLayout 
    title="Beranda"
    description="Jurnal harian tentang kebingungan quarter-life crisis, cerita absurd, dan usaha menertawakan tagihan bulanan. Baca tulisan terbaru di Diam.blog."
>
    <!-- SEO: Inject Schema Markup -->
    <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />

    <Header />
    
    <main class="max-w-6xl mx-auto px-6 pt-32 min-h-screen relative z-10 pb-20">
        
        <!-- Hero Section -->
        <section class="mb-20 text-center md:text-left flex flex-col md:flex-row items-center gap-8 animate-fade-in">
            <div class="w-24 h-24 md:w-32 md:h-32 rounded-full overflow-hidden border-2 border-dashed border-gray-300 dark:border-gray-700 bg-gray-100 flex-shrink-0">
                <!-- SEO: Alt text yang deskriptif -->
                <img 
                    src={optimizeImage("/images/avatardiam.png", 256)} 
                    alt="Avatar Penulis Diam.blog" 
                    width="128" 
                    height="128" 
                    class="w-full h-full object-cover"
                    loading="eager" 
                    fetchpriority="high"
                    onerror="this.onerror=null; this.src='/images/avatardiam.png';"
                />
            </div>
            <div>
                <h1 class="font-display font-bold text-3xl md:text-4xl mb-3 leading-tight">
                    <span class="text-gray-400 block text-lg font-medium mb-1">Halo,</span>
                    Saya cuma <span class="bg-gradient-to-r from-accent/50 to-accent/50 bg-[length:100%_40%] bg-bottom bg-no-repeat">pura-pura paham</span> hidup.
                </h1>
                <p class="text-gray-600 dark:text-gray-400 text-lg leading-relaxed max-w-lg">
                    Menulis untuk merayakan kebingungan quarter-life crisis, menertawakan tagihan bulanan, dan mencari arti di balik bubur ayam yang diaduk.
                </p>
            </div>
        </section>

        <!-- Article Grid Section -->
        <section>
            <div class="flex items-center gap-3 mb-8">
                <h2 class="font-display font-bold text-xl">Tulisan Terbaru</h2>
                <div class="h-px bg-gray-200 dark:bg-gray-800 flex-1"></div>
            </div>

            <!-- GRID CONTAINER -->
            <div id="post-container" class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
                {initialPosts.map((post, index) => {
                    const rawImg = getPostImage(post);
                    const optimizedImg = optimizeImage(rawImg, 600);
                    const isLCP = index === 0;
                    const category = post.data.category || "Jurnal"; 
                    
                    return (
                        <article class="group flex flex-col gap-4 border-b border-gray-100 dark:border-gray-800 pb-8 md:border-0 md:pb-0 relative">
                            <div class="relative overflow-hidden rounded-2xl aspect-[16/9] bg-gray-100 dark:bg-gray-800 z-10">
                                <a href={`/blog/${post.slug}`} class="block w-full h-full" aria-label={`Baca: ${post.data.title}`}>
                                    <!-- SEO: Alt text diisi judul artikel -->
                                    <img 
                                        src={optimizedImg} 
                                        alt={post.data.title} 
                                        width="600"
                                        height="338"
                                        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                        loading={isLCP ? "eager" : "lazy"}
                                        fetchpriority={isLCP ? "high" : "auto"}
                                        decoding={isLCP ? "sync" : "async"} 
                                        onerror={`this.onerror=null; this.src='${rawImg}';`} 
                                    />
                                </a>
                                
                                <!-- KATEGORI JUDUL -->
                                <span class="absolute top-3 left-3 bg-white/90 dark:bg-dark-card/90 backdrop-blur-sm text-xs font-bold px-3 py-1 rounded-full shadow-sm text-ink dark:text-white border border-gray-100 dark:border-gray-700">
                                    {category}
                                </span>

                                <!-- TOMBOL BOOKMARK -->
                                <button 
                                    class="bookmark-btn absolute top-3 right-3 w-8 h-8 bg-white/90 dark:bg-dark-card/90 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-accent hover:text-white dark:hover:bg-accent dark:hover:text-white transition-all shadow-sm text-gray-400 dark:text-gray-400 border border-gray-100 dark:border-gray-700 z-20"
                                    data-slug={post.slug}
                                    aria-label="Simpan ke koleksi"
                                >
                                    <i class="ph-bold ph-bookmark-simple"></i>
                                </button>
                            </div>
                            
                            <div class="flex flex-col gap-2">
                                <time datetime={new Date(post.data.pubDate).toISOString()} class="text-sm text-gray-500 dark:text-gray-400 font-mono">
                                    {new Date(post.data.pubDate).toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' })}
                                </time>

                                <h2 class="text-2xl font-bold font-display group-hover:text-accent transition-colors leading-tight">
                                    <a href={`/blog/${post.slug}`} class="before:absolute before:inset-0 md:before:static">
                                        {post.data.title}
                                    </a>
                                </h2>
                                <p class="text-gray-600 dark:text-gray-400 line-clamp-3 leading-relaxed">
                                    {post.data.description}
                                </p>
                            </div>
                        </article>
                    );
                })}
            </div>

            <!-- TOMBOL LOAD MORE -->
            <div class="text-center pb-8 md:pb-0 relative z-30">
                <button 
                    id="load-more-btn" 
                    class="group px-6 py-3 border border-dashed border-gray-400 text-gray-600 dark:text-gray-300 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800 hover:border-accent hover:text-accent transition-all duration-300 font-medium text-sm flex items-center gap-2 mx-auto disabled:opacity-50 disabled:cursor-not-allowed cursor-pointer bg-paper dark:bg-dark-bg"
                >
                    <span>Lihat Artikel Lain</span>
                    <i class="ph-bold ph-arrow-down group-hover:translate-y-1 transition-transform"></i>
                </button>
            </div>

             <div id="end-message" class="hidden text-center py-8 text-gray-400 font-hand text-lg">
                ~ Udah abis cuy, tidur sana ~
            </div>

        </section>
    </main>

    <Footer />
</BaseLayout>

<script>
  document.addEventListener('astro:page-load', () => {
      // === BOOKMARK LOGIC ===
      const initBookmarks = () => {
          const saved = JSON.parse(localStorage.getItem('myBookmarks') || '[]');
          document.querySelectorAll('.bookmark-btn').forEach(btn => {
              const slug = (btn as HTMLElement).dataset.slug;
              const icon = btn.querySelector('i');
              if (saved.includes(slug)) {
                  btn.classList.add('text-accent');
                  icon.classList.replace('ph-bookmark-simple', 'ph-bookmark-fill');
              } else {
                  btn.classList.remove('text-accent');
                  icon.classList.replace('ph-bookmark-fill', 'ph-bookmark-simple');
              }
          });
      };
      initBookmarks();

      const container = document.getElementById('post-container');
      if (container) {
          container.addEventListener('click', (e) => {
              const target = e.target as HTMLElement;
              const btn = target.closest('.bookmark-btn') as HTMLElement;
              
              if (btn) {
                  e.preventDefault();
                  e.stopPropagation();
                  
                  const slug = btn.dataset.slug;
                  let saved = JSON.parse(localStorage.getItem('myBookmarks') || '[]');
                  const icon = btn.querySelector('i');

                  if (saved.includes(slug)) {
                      saved = saved.filter(s => s !== slug);
                      btn.classList.remove('text-accent');
                      icon.classList.replace('ph-bookmark-fill', 'ph-bookmark-simple');
                  } else {
                      saved.push(slug);
                      btn.classList.add('text-accent');
                      icon.classList.replace('ph-bookmark-simple', 'ph-bookmark-fill');
                      if (window.showToast) window.showToast("Disimpan ke koleksi");
                  }

                  localStorage.setItem('myBookmarks', JSON.stringify(saved));
                  window.dispatchEvent(new Event('bookmark-updated'));
              }
          });
      }

      // === LOAD MORE LOGIC ===
      let allRemainingPosts = [];
      let currentIndex = 0;
      let isDataFetched = false;
      let isLoading = false;
      const ITEMS_PER_LOAD = 4;
      const DEFAULT_IMG = "/images/og-default.png";
      const SITE_URL = 'https://diam.blog'; 

      const btn = document.getElementById('load-more-btn');
      const endMessage = document.getElementById('end-message');

      if (!btn) return;

      const getImageSrc = (post) => {
        const imgData = post.data.image || post.data.cover || post.data.heroImage;
        let src = DEFAULT_IMG;
        if (typeof imgData === 'string') {
            src = imgData;
        } else if (imgData && typeof imgData === 'object' && imgData.src) {
            src = imgData.src;
        }
        return src; 
      };

      const optimizeImageClient = (url, width = 600) => {
        if (!url || url.startsWith('http') || url === DEFAULT_IMG) return url;
        const isLocal = window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1';
        if (!isLocal) {
             const fullUrl = `${SITE_URL}${url}`;
             return `https://wsrv.nl/?url=${encodeURIComponent(fullUrl)}&w=${width}&output=webp&q=80`;
        }
        return url;
      };

      const createPostCard = (post) => {
        const dateStr = new Date(post.data.pubDate).toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' });
        const isoDate = new Date(post.data.pubDate).toISOString();
        const rawImg = getImageSrc(post);
        const optimizedImg = optimizeImageClient(rawImg, 600);
        const category = post.data.category || "Jurnal";
        
        const saved = JSON.parse(localStorage.getItem('myBookmarks') || '[]');
        const isSaved = saved.includes(post.slug);
        const bookmarkIcon = isSaved ? 'ph-bookmark-fill' : 'ph-bookmark-simple';
        const bookmarkClass = isSaved ? 'text-accent' : '';

        const imageHtml = `
            <div class="relative overflow-hidden rounded-2xl aspect-[16/9] bg-gray-100 dark:bg-gray-800 z-10">
                <a href="/blog/${post.slug}" class="block w-full h-full" aria-label="Baca: ${post.data.title}">
                    <img 
                        src="${optimizedImg}" 
                        alt="${post.data.title}"  
                        loading="lazy" 
                        decoding="async"
                        width="600" 
                        height="338"
                        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                        onerror="this.onerror=null; this.src='${rawImg}';"
                    />
                </a>
                <span class="absolute top-3 left-3 bg-white/90 dark:bg-dark-card/90 backdrop-blur-sm text-xs font-bold px-3 py-1 rounded-full shadow-sm text-ink dark:text-white border border-gray-100 dark:border-gray-700">
                    ${category}
                </span>
                <button 
                    class="bookmark-btn absolute top-3 right-3 w-8 h-8 bg-white/90 dark:bg-dark-card/90 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-accent hover:text-white dark:hover:bg-accent dark:hover:text-white transition-all shadow-sm text-gray-400 dark:text-gray-400 border border-gray-100 dark:border-gray-700 z-20 ${bookmarkClass}"
                    data-slug="${post.slug}"
                    aria-label="Simpan ke koleksi"
                >
                    <i class="ph-bold ${bookmarkIcon}"></i>
                </button>
            </div>
        `;

        return `
        <article class="group flex flex-col gap-4 border-b border-gray-100 dark:border-gray-800 pb-8 md:border-0 md:pb-0 relative fade-in">
            ${imageHtml}
            <div class="flex flex-col gap-2">
                <time datetime="${isoDate}" class="text-sm text-gray-500 dark:text-gray-400 font-mono">${dateStr}</time>
                <h2 class="text-2xl font-bold font-display group-hover:text-accent transition-colors leading-tight">
                    <a href="/blog/${post.slug}" class="before:absolute before:inset-0 md:before:static">
                    ${post.data.title}
                    </a>
                </h2>
                <p class="text-gray-600 dark:text-gray-400 line-clamp-3 leading-relaxed">
                    ${post.data.description}
                </p>
            </div>
        </article>
        `;
      };

      const loadMorePosts = async () => {
        if (isLoading) return;
        isLoading = true;

        const originalContent = btn.innerHTML;
        btn.disabled = true;
        btn.innerHTML = `<span class="inline-block animate-spin h-4 w-4 border-2 border-current border-t-transparent rounded-full"></span> Lagi nyari...`;

        try {
            if (!isDataFetched) {
                const res = await fetch('/api/posts.json');
                if (!res.ok) throw new Error('Gagal fetch');
                allRemainingPosts = await res.json();
                isDataFetched = true;
            }

            const nextBatch = allRemainingPosts.slice(currentIndex, currentIndex + ITEMS_PER_LOAD);

            if (nextBatch.length === 0) {
                btn.classList.add('hidden');
                endMessage.classList.remove('hidden');
            } else {
                nextBatch.forEach(post => {
                container.insertAdjacentHTML('beforeend', createPostCard(post));
                });
                currentIndex += ITEMS_PER_LOAD;
                if (currentIndex >= allRemainingPosts.length) {
                    btn.classList.add('hidden');
                    endMessage.classList.remove('hidden');
                } else {
                    btn.disabled = false;
                    btn.innerHTML = originalContent;
                }
            }
        } catch (err) {
            console.error("Error:", err);
            btn.disabled = false;
            btn.innerText = "Gagal, coba lagi";
        } finally {
            isLoading = false;
        }
      };

      btn.addEventListener('click', loadMorePosts);
  });
</script>

<style>
  :global(.fade-in) {
    animation: fadeIn 0.5s ease-in forwards;
  }
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
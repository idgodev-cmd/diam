---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ArticleCard from '../components/ArticleCard.astro'; // Import Card Baru
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title="Beranda">
    <Header />
    
    <main class="max-w-6xl mx-auto px-6 pt-32 min-h-screen relative z-10">
        
        <!-- Hero Section -->
        <section class="mb-20 text-center md:text-left flex flex-col md:flex-row items-center gap-8 animate-fade-in">
            <div class="w-24 h-24 md:w-32 md:h-32 rounded-full overflow-hidden border-2 border-dashed border-gray-300 dark:border-gray-700 bg-gray-100 flex-shrink-0">
                <img src="https://api.dicebear.com/7.x/notionists/svg?seed=Felix" alt="Avatar" class="w-full h-full object-cover">
            </div>
            <div>
                <h1 class="font-display font-bold text-3xl md:text-4xl mb-3 leading-tight">
                    <span class="text-gray-400 block text-lg font-medium mb-1">Halo,</span>
                    Saya cuma <span class="bg-gradient-to-r from-accent/50 to-accent/50 bg-[length:100%_40%] bg-bottom bg-no-repeat">pura-pura paham</span> hidup.
                </h1>
                <p class="text-gray-600 dark:text-gray-400 text-lg leading-relaxed max-w-lg">
                    Menulis untuk merayakan kebingungan quarter-life crisis, menertawakan tagihan bulanan, dan mencari arti di balik bubur ayam yang diaduk.
                </p>
            </div>
        </section>

        <!-- Article Grid -->
        <section>
            <div class="flex items-center gap-3 mb-8">
                <h2 class="font-display font-bold text-xl">Tulisan Terbaru</h2>
                <div class="h-px bg-gray-200 dark:bg-gray-800 flex-1"></div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {posts.map((post) => (
                    <ArticleCard post={post} />
                ))}
            </div>
        </section>
    </main>

    <Footer />
</BaseLayout>
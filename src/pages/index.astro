---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content'; // Import wajib buat ambil data

// Ambil semua artikel dari database content
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title="Beranda">
	<Header />
	
	<main class="max-w-5xl mx-auto px-6 pt-32 min-h-screen relative z-10">
		<!-- ... existing code (Bagian Hero Section jangan dihapus) ... -->
        <section class="mb-20 text-center md:text-left flex flex-col md:flex-row items-center gap-8">
			<div class="w-24 h-24 md:w-32 md:h-32 rounded-full overflow-hidden border-2 border-dashed border-gray-300 dark:border-gray-700 bg-gray-100 flex-shrink-0">
				<img src="/images/avatardiam.png" alt="Avatar" class="w-full h-full object-cover">
			</div>
			<div>
				<h1 class="font-display font-bold text-3xl md:text-4xl mb-3 leading-tight">
					<span class="text-gray-400 dark:text-gray-500 block text-lg font-medium mb-1">Halo,</span>
					Saya cuma <span class="bg-gradient-to-r from-accent/50 to-accent/50 bg-[length:100%_40%] bg-bottom bg-no-repeat">pura-pura paham</span> hidup.
				</h1>
				<p class="text-gray-600 dark:text-gray-400 text-lg leading-relaxed max-w-lg">
					Menulis untuk merayakan kebingungan quarter-life crisis, menertawakan tagihan bulanan, dan mencari arti di balik bubur ayam yang diaduk.
				</p>
			</div>
		</section>

		<!-- POST GRID (Ini yang kita bikin DYNAMIC) -->
		<section>
			<div class="flex items-center gap-3 mb-8">
				<h2 class="font-display font-bold text-xl">Tulisan Terbaru</h2>
				<div class="h-px bg-gray-200 dark:bg-gray-800 flex-1"></div>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Looping Data Artikel -->
                {posts.map((post) => (
                    <article class="group cursor-pointer flex flex-col h-full">
                        <a href={`/blog/${post.slug}`} class="block h-full">
                            <div class="aspect-video w-full bg-gray-200 dark:bg-gray-800 rounded-xl overflow-hidden mb-4 border border-gray-100 dark:border-gray-800 relative">
                                <!-- Logic Gambar: Kalau ada heroImage tampilkan, kalau gak ada pake placeholder -->
                                {post.data.heroImage ? (
                                    <img 
                                        src={post.data.heroImage} 
                                        alt={post.data.title} 
                                        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                    />
                                ) : (
                                    <div class="w-full h-full flex items-center justify-center text-gray-400 bg-gray-100 dark:bg-gray-800">
                                        <span class="text-sm font-medium">No Image</span>
                                    </div>
                                )}
                                
                                <!-- Tag Pojok Kanan -->
                                {post.data.tags && (
                                    <div class="absolute top-3 right-3 bg-white/90 dark:bg-black/80 px-2 py-1 rounded text-[10px] font-bold uppercase tracking-wider backdrop-blur-sm shadow-sm border border-gray-100 dark:border-gray-700">
                                        {post.data.tags[0]}
                                    </div>
                                )}
                            </div>

                            <h3 class="font-display font-bold text-xl mb-2 group-hover:text-yellow-600 dark:group-hover:text-yellow-500 transition-colors leading-tight">
                                {post.data.title}
                            </h3>
                            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed mb-4 line-clamp-2">
                                {post.data.description}
                            </p>
                            
                            <div class="flex items-center justify-between text-xs font-medium text-gray-400 mt-auto pt-4 border-t border-gray-100 dark:border-gray-800">
                                <time datetime={post.data.pubDate.toISOString()}>
                                    {post.data.pubDate.toLocaleDateString('id-ID', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric',
                                    })}
                                </time>
                                <span class="group-hover:translate-x-1 transition-transform text-ink dark:text-white">Baca &rarr;</span>
                            </div>
                        </a>
                    </article>
                ))}
			</div>
		</section>
	</main>

	<Footer />
</BaseLayout>